<% content_for :title, "Users" %>

<div class="container my-5">
  <p class="mt-2 text-success"><%= notice %></p>
  <h1 class="mb-4 text-center">All Registered Users</h1>
  <table class="table table-striped table-hover rounded shadow">
    <thead class="table-primary">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Passport Country</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="fw-bold"><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.passport_country %></td>
          <td>
            <div class="btn-group">
              <%= link_to "View", user, class: "btn btn-outline-info btn-sm" %>
              <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-warning btn-sm" %>
              <%= button_to "Delete", user, method: :delete, data: { confirm: "Delete this user?" }, class: "btn btn-outline-danger btn-sm" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Add New User", new_user_path, class: "btn btn-success" %>
</div>
