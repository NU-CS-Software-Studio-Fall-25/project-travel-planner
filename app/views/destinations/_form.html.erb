<%= form_with(model: destination) do |form| %>
  <% if destination.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(destination.errors.count, "error") %> prohibited this destination from being saved:</h4>
      <ul class="mb-0">
        <% destination.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Destination Name", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "e.g., Paris, Tokyo, New York" %>
    <small class="form-text text-muted">This can be a creative name for the trip</small>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :city, "City/Location", class: "form-label" %>
      <%= form.text_field :city, class: "form-control", placeholder: "e.g., Paris, Tokyo, Burlington, Vermont" %>
      <small class="form-text text-muted">Include state/province for ambiguous city names (e.g., "Burlington, Vermont")</small>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :country, class: "form-label" %>
      <%= form.text_field :country, class: "form-control", placeholder: "e.g., France, Japan, United States" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Describe this destination..." %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :safety_score, "Safety Score (1-10)", class: "form-label" %>
      <%= form.number_field :safety_score, class: "form-control", min: 1, max: 10, placeholder: "1-10" %>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :average_cost, "Average Daily Cost ($)", class: "form-label" %>
      <%= form.number_field :average_cost, class: "form-control", step: 0.01, placeholder: "e.g., 150.00" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :best_season, class: "form-label" %>
      <%= form.text_field :best_season, class: "form-control", placeholder: "e.g., Spring, Summer" %>
    </div>

    <div class="col-md-6 mb-3">
      <label class="form-label">Visa Required?</label>
      <div class="form-check">
        <%= form.check_box :visa_required, class: "form-check-input" %>
        <%= form.label :visa_required, "Yes, visa is required", class: "form-check-label" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :latitude, class: "form-label" %>
      <%= form.text_field :latitude, class: "form-control", placeholder: "e.g., 48.8566" %>
      <small class="form-text text-muted">Optional - will be geocoded if left blank</small>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :longitude, class: "form-label" %>
      <%= form.text_field :longitude, class: "form-control", placeholder: "e.g., 2.3522" %>
      <small class="form-text text-muted">Optional - will be geocoded if left blank</small>
    </div>
  </div>

  <div class="d-grid">
    <%= form.submit destination.new_record? ? "Create Destination" : "Update Destination", class: "btn btn-primary" %>
  </div>
<% end %>
