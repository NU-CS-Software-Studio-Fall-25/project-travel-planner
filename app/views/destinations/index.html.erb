<% content_for :title, "Destinations" %>

<div class="container my-5">
  <p class="mt-2 text-success"><%= notice %></p>
  <h1 class="mb-4 text-center">Explore Popular Destinations</h1>
  
  <div class="d-flex justify-content-end mb-3">
    <%= link_to "Add Destination", new_destination_path, class: "btn btn-success" %>
  </div>

  <table class="table table-striped table-hover rounded shadow">
    <thead class="table-primary">
      <tr>
        <th>Name</th>
        <th>Country</th>
        <th>Visa Required</th>
        <th>Safety</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @destinations.each do |destination| %>
        <tr>
          <td class="fw-bold"><%= destination.name %></td>
          <td><%= destination.country %></td>
          <td>
            <span class="badge <%= destination.visa_required ? 'bg-danger' : 'bg-success' %>">
              <%= destination.visa_required ? "Yes" : "No" %>
            </span>
          </td>
          <td>
            <span class="badge bg-info text-dark"><%= destination.safety_score %>/10</span>
          </td>
          <td>
            <div class="btn-group">
              <%= link_to "View", destination, class: "btn btn-outline-info btn-sm" %>
              <%= link_to "Edit", edit_destination_path(destination), class: "btn btn-outline-warning btn-sm" %>
              <%= link_to "Delete", destination, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
