<!DOCTYPE html>
<html>
<head>
  <title><%= content_for(:title) || "Travel Planner - Your Personalized Travel Guide" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover">
  
  <!-- PWA Meta Tags -->
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="default">
  <meta name="apple-mobile-web-app-title" content="Travel Planner">
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="theme-color" content="#007bff">
  <meta name="description" content="Plan your perfect trip with personalized recommendations, safety scores, and TripAdvisor integration.">
  
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= yield :head %>

  <%# Google Maps API key meta - set via Rails credentials or ENV for local/dev. Example: Rails.application.credentials.dig(:google, :maps_api_key) or ENV['GOOGLE_MAPS_API_KEY'] %>
  <meta name="google-maps-api-key" content="<%= Rails.application.credentials.dig(:google, :maps_api_key) || ENV['GOOGLE_MAPS_API_KEY'] %>">

  <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
  <%= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

  <!-- Icons -->
  <link rel="icon" href="/icon-192.png" type="image/png" sizes="192x192">
  <link rel="icon" href="/icon-512.png" type="image/png" sizes="512x512">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap JS - loaded in head to ensure it is available before our scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <%# Includes all stylesheet files in app/assets/stylesheets %>
  <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body data-controller="pwa-install">
<%# (Development-only badge removed) %>
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container">
    <% if logged_in? %>
      <%= button_to "üåç Travel Planner", logout_path, method: :delete, class: "navbar-brand btn btn-link", form_class: "d-inline" %>
    <% else %>
      <%= link_to "üåç Travel Planner", root_path, class: "navbar-brand" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <% if logged_in? %>
            <%= link_to "My Profile", current_user, class: "nav-link" %>
          <% else %>
            <%= link_to "Home", root_path, class: "nav-link" %>
          <% end %>
        </li>
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to "Get Recommendations", travel_recommendations_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Destinations", destinations_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My Plans", travel_plans_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>

      <ul class="navbar-nav">
        <% if logged_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= current_user.name %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
              <li><%= link_to "My Profile", current_user, class: "dropdown-item" %></li>
              <li><%= link_to "Edit Profile", edit_user_path(current_user), class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= button_to "Logout", logout_path, method: :delete, class: "dropdown-item" %></li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", login_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", signup_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<!-- Main Content -->
<main class="container mt-4">
  <!-- Notifications container for Turbo Stream updates -->
  <div id="notifications"></div>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= alert %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <%= yield %>
</main>

<!-- Footer -->
<footer class="bg-light mt-5 py-4">
  <div class="container text-center">
    <p>&copy; 2025 Travel Planner - Built by Sirui Chen, Ailin Chu, Jerome Bizimana, Rohun Gargya</p>
  </div>
</footer>

<!-- PWA Service Worker Registration -->
<script>
  // Wrap in IIFE to avoid variable conflicts with Turbo
  (function() {
    'use strict';
    
    // Only initialize once
    if (window.pwaInitialized) {
      return;
    }
    window.pwaInitialized = true;

    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('<%= pwa_service_worker_path %>')
          .then((registration) => {
            console.log('‚úÖ Service Worker registered successfully:', registration.scope);
            
            // Check for updates
            registration.addEventListener('updatefound', () => {
              const newWorker = registration.installing;
              console.log('üîÑ Service Worker update found!');
              
              newWorker.addEventListener('statechange', () => {
                if (newWorker.state === 'installed' && navigator.serviceWorker.controller) {
                  // New service worker available, prompt user to refresh
                  if (confirm('A new version of Travel Planner is available! Reload to update?')) {
                    window.location.reload();
                  }
                }
              });
            });
          })
          .catch((error) => {
            console.error('‚ùå Service Worker registration failed:', error);
          });
      });

      // Listen for network status changes (only add listeners once)
      if (!window.pwaNetworkListenersAdded) {
        window.pwaNetworkListenersAdded = true;
        
        window.addEventListener('online', () => {
          console.log('üåê Back online!');
          // Remove any existing notifications
          const existingNotifications = document.querySelectorAll('.pwa-network-notification');
          existingNotifications.forEach(n => n.remove());
          
          // Show notification
          const notification = document.createElement('div');
          notification.className = 'alert alert-success alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3 pwa-network-notification';
          notification.style.zIndex = '9999';
          notification.innerHTML = `
            üåê You're back online!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          `;
          document.body.appendChild(notification);
          setTimeout(() => notification.remove(), 3000);
        });

        window.addEventListener('offline', () => {
          console.log('üì° Offline mode activated');
          // Remove any existing notifications
          const existingNotifications = document.querySelectorAll('.pwa-network-notification');
          existingNotifications.forEach(n => n.remove());
          
          const notification = document.createElement('div');
          notification.className = 'alert alert-warning alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3 pwa-network-notification';
          notification.style.zIndex = '9999';
          notification.innerHTML = `
            üì° You're offline. Some features may be limited.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          `;
          document.body.appendChild(notification);
          setTimeout(() => notification.remove(), 5000);
        });
      }
    }

    // Detect if app is running as PWA
    const isPWA = window.matchMedia('(display-mode: standalone)').matches || 
                  window.navigator.standalone === true;
    
    if (isPWA) {
      console.log('üöÄ Running as PWA!');
    } else {
      console.log('üåê Running in browser');
    }
  })();
</script>
</body>
</html>

<style>
