<% content_for :title, "Edit Profile - Travel Planner" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center mb-0">Edit Your Travel Profile</h1>
          <p class="text-center text-muted mb-0">Update your preferences to get better travel recommendations</p>
        </div>
        <div class="card-body">
          <%= render "form", user: @user %>
          
          <div class="text-center mt-3">
            <%= link_to "← Back to Profile", @user, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
