<%# app/views/travel_recommendations/_recommendations_list.html.erb %>
<%= turbo_frame_tag "recommendations_list" do %>
  <% if recommendations.present? %>
    <div class="mb-5 d-flex justify-content-between align-items-center">
      <h2 class="display-6 fw-bold text-gradient mb-0">AI-Powered Travel Recommendations</h2>
      <span class="badge bg-success py-2 px-3 fs-6 d-flex align-items-center gap-2 shadow-sm">
        <i class="bi bi-check-circle-fill"></i>
        Saved & will remain visible
      </span>
    </div>

    <div class="row g-4">
      <% recommendations.each_with_index do |rec, index| %>
        <div class="col-12">
          <div class="card border-0 shadow-lg rounded-5 overflow-hidden hover-zoom">

            <div class="card-header p-4 text-white" style="background: linear-gradient(135deg, #3B82F6 0%, #1E3A8A 100%);">
              <h4 class="mb-1 fw-bold"><%= rec[:name] %></h4>
              <small class="text-white-50"><%= rec[:destination_country] %></small>
            </div>

            <div class="card-body p-4">
              <div class="row">
                <div class="col-md-8">
                  <p class="mb-3"><strong>Description:</strong> <%= rec[:description] %></p>
                  <p class="mb-3"><strong>Details:</strong> <%= rec[:details] %></p>

                  <% if rec[:itinerary].is_a?(Hash) && rec[:itinerary].present? %>
                    <div class="accordion mb-3" id="accordion-itinerary-<%= index %>">
                      <div class="accordion-item border-0 rounded-3 shadow-sm">
                        <h2 class="accordion-header" id="heading-itinerary-<%= index %>">
                          <button class="accordion-button collapsed fw-semibold text-primary bg-white"
                                  type="button"
                                  data-bs-toggle="collapse"
                                  data-bs-target="#collapse-itinerary-<%= index %>"
                                  aria-expanded="false"
                                  aria-controls="collapse-itinerary-<%= index %>">
                            <i class="bi bi-journal-text me-2"></i> View Detailed Itinerary
                          </button>
                        </h2>
                        <div id="collapse-itinerary-<%= index %>" class="accordion-collapse collapse">
                          <div class="accordion-body">
                            <% rec[:itinerary].each do |day, description| %>
                              <div class="mb-2">
                                <strong><%= day.to_s.humanize %>:</strong>
                                <p class="mb-1 text-muted"><%= description %></p>
                              </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>

                    <!-- TripAdvisor Images Section -->
                    <div class="accordion mb-3" id="accordion-images-<%= index %>">
                      <div class="accordion-item border-0 rounded-3 shadow-sm">
                        <h2 class="accordion-header" id="heading-images-<%= index %>">
                          <button class="accordion-button collapsed fw-semibold text-primary bg-white"
                                  type="button"
                                  data-bs-toggle="collapse"
                                  data-bs-target="#collapse-images-<%= index %>"
                                  aria-expanded="false"
                                  aria-controls="collapse-images-<%= index %>"
                                  onclick="loadTripAdvisorImages(<%= index %>, '<%= rec[:destination_city] %>', '<%= rec[:destination_country] %>')">
                            <i class="bi bi-images me-2"></i> Images of the Place
                          </button>
                        </h2>
                        <div id="collapse-images-<%= index %>" class="accordion-collapse collapse">
                          <div class="accordion-body">
                            <div id="images-container-<%= index %>" class="text-center py-3" data-city="<%= rec[:destination_city] %>" data-country="<%= rec[:destination_country] %>">
                              <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading images...</span>
                              </div>
                              <p class="mt-2 text-muted">Loading images from TripAdvisor...</p>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>

                <div class="col-md-4">
                  <ul class="list-group list-group-flush rounded-4 shadow-sm">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <span><i class="bi bi-currency-dollar me-1 text-success"></i><strong>Budget</strong></span>
                      <span class="badge bg-success rounded-pill">$<%= number_with_delimiter(rec[:budget_min]) %> - $<%= number_with_delimiter(rec[:budget_max]) %></span>
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <span><i class="bi bi-shield-check me-1 text-warning"></i><strong>Safety</strong></span>
                      <%
                        country_safety = CountrySafetyScore.find_by(country_name: rec[:destination_country], year: 2025)
                        if country_safety
                          safety_level = country_safety.safety_level
                          badge_class = "badge bg-#{country_safety.badge_color}"
                        else
                          safety_score = rec[:safety_score] || 5
                          safety_level = safety_score_to_level(safety_score)
                          badge_class = case safety_score.to_i
                                        when 0..3 then "badge bg-danger"
                                        when 4..5 then "badge bg-warning"
                                        when 6..7 then "badge bg-info"
                                        else "badge bg-success"
                                        end
                        end
                      %>
                      <span class="<%= badge_class %>"><%= safety_level %></span>
                    </li>

                    <li class="list-group-item"><i class="bi bi-geo-alt me-1 text-info"></i><strong>Travel Style:</strong> <%= rec[:travel_style] %></li>
                    <li class="list-group-item"><i class="bi bi-pass me-1 text-primary"></i><strong>Visa Info:</strong> <%= rec[:visa_info] %></li>
                  </ul>

                  <% if rec[:budget_breakdown].present? %>
                    <div class="accordion mt-3" id="accordion-budget-<%= index %>">
                      <div class="accordion-item border-0 shadow-sm rounded-4">
                        <h2 class="accordion-header" id="heading-budget-<%= index %>">
                          <button class="accordion-button collapsed fw-semibold text-primary bg-white"
                                  type="button"
                                  data-bs-toggle="collapse"
                                  data-bs-target="#collapse-budget-<%= index %>"
                                  aria-expanded="false"
                                  aria-controls="collapse-budget-<%= index %>">
                            <i class="bi bi-wallet2 me-2"></i> Budget Breakdown
                          </button>
                        </h2>
                        <div id="collapse-budget-<%= index %>" class="accordion-collapse collapse">
                          <div class="accordion-body p-4 bg-light rounded-4">
                            <% rec[:budget_breakdown].each do |category, data| %>
                              <div class="budget-item mb-4 p-3 bg-white shadow-sm rounded-4 border-start border-4 border-primary-subtle">
                                <h5 class="fw-bold text-primary mb-2 d-flex align-items-center">
                                  <i class="bi bi-dot fs-3 lh-1 me-1 text-primary"></i>
                                  <%= category.to_s.titleize %>
                                </h5>

                                <% if data.is_a?(Hash) %>
                                  <% if data[:description].present? %>
                                    <p class="mb-2">
                                      <span class="fw-semibold text-dark">Description:</span>
                                      <span class="text-muted"><%= data[:description] %></span>
                                    </p>
                                  <% end %>

                                  <% data.each do |key, value| %>
                                    <% next if key.to_s == "description" %>
                                    <p class="mb-1">
                                      <span class="fw-semibold text-dark"><%= key.to_s.humanize %>:</span>
                                      <% if value.is_a?(Numeric) %>
                                        <span class="text-muted">$<%= number_with_delimiter(value) %></span>
                                      <% else %>
                                        <span class="text-muted"><%= value %></span>
                                      <% end %>
                                    </p>
                                  <% end %>
                                <% else %>
                                  <p class="mb-0"><span class="fw-semibold text-dark">Cost:</span> $<%= number_with_delimiter(data) %></p>
                                <% end %>
                              </div>
                            <% end %>

                            <% if rec[:budget_breakdown]["Total trip cost"].present? %>
                              <div class="total-trip bg-gradient text-white p-3 rounded-4 text-center shadow-sm mt-4"
                                   style="background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);">
                                <h5 class="fw-bold mb-1">
                                  <i class="bi bi-cash-stack me-2"></i>Total Trip Cost
                                </h5>
                                <p class="fs-5 fw-bold mb-0">
                                  $<%= number_with_delimiter(rec[:budget_breakdown]["Total trip cost"].to_s.gsub(/[^\d]/, '').to_i) %>
                                </p>
                              </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="card-footer bg-light d-flex justify-content-end gap-2">
              <form action="<%= travel_plans_path %>" method="post" data-turbo-stream="true"
                    onsubmit="event.target.querySelector('button[type=submit]').disabled = true;
                      event.target.querySelector('button[type=submit]').classList.replace('btn-primary', 'btn-success');
                      event.target.querySelector('button[type=submit]').innerHTML = '‚úì Saved';">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <%= hidden_field_tag 'travel_plan[name]', rec[:name] %>
                <%= hidden_field_tag 'travel_plan[destination_name]', rec[:name] %>
                <%= hidden_field_tag 'travel_plan[destination_city]', rec[:destination_city] %>
                <%= hidden_field_tag 'travel_plan[destination_country]', rec[:destination_country] %>
                <%= hidden_field_tag 'travel_plan[description]', rec[:description] %>
                <%= hidden_field_tag 'travel_plan[details]', rec[:details] %>
                <%= hidden_field_tag 'travel_plan[budget_min]', rec[:budget_min] %>
                <%= hidden_field_tag 'travel_plan[budget_max]', rec[:budget_max] %>
                <%= hidden_field_tag 'travel_plan[safety_level]', rec[:safety_level] %>
                <%= hidden_field_tag 'travel_plan[travel_style]', rec[:travel_style] %>
                <%= hidden_field_tag 'travel_plan[length_of_stay]', rec[:length_of_stay] %>
                <%= hidden_field_tag 'travel_plan[travel_month]', rec[:travel_month] %>
                <%= hidden_field_tag 'travel_plan[trip_scope]', rec[:trip_scope] %>
                <%= hidden_field_tag 'travel_plan[trip_type]', rec[:trip_type] %>
                <%= hidden_field_tag 'travel_plan[general_purpose]', rec[:general_purpose] %>
                <%= hidden_field_tag 'travel_plan[visa_info]', rec[:visa_info] %>
                <%= hidden_field_tag 'travel_plan[status]', 'planned' %>
                <%= hidden_field_tag 'travel_plan[start_date]', rec[:start_date] if rec[:start_date].present? %>
                <%= hidden_field_tag 'travel_plan[end_date]', rec[:end_date] if rec[:end_date].present? %>
                <% if rec[:itinerary].is_a?(Hash) %>
                  <% rec[:itinerary].each do |day, description| %>
                    <%= hidden_field_tag "travel_plan[itinerary][#{day}]", description %>
                  <% end %>
                <% end %>
                <% if rec[:budget_breakdown].is_a?(Hash) %>
                  <% rec[:budget_breakdown].each do |item, cost| %>
                    <%= hidden_field_tag "travel_plan[budget_breakdown][#{item}]", cost %>
                  <% end %>
                <% end %>
                <button type="submit" class="btn btn-primary btn-sm">
                  <i class="bi bi-bookmark-plus me-1"></i> Save
                </button>
              </form>
              <button type="button" class="btn btn-outline-danger btn-sm" onclick="this.closest('.col-12').remove();">
                <i class="bi bi-trash me-1"></i> Delete
              </button>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>

<style>
    .hover-zoom {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .hover-zoom:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }

    .text-gradient {
        background: linear-gradient(135deg, #6A82FB 0%, #FC5C7D 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .budget-item {
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }
    .budget-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    }
    .budget-item h5 {
        font-size: 1.1rem;
    }
    .budget-item p {
        font-size: 0.95rem;
    }
    .total-trip {
        letter-spacing: 0.3px;
    }

    /* --- Accordion visual behavior --- */
    .accordion-button {
        border-radius: 0.75rem !important;
        background-color: #fff !important; /* collapsed: white */
        color: #0d6efd !important; /* blue text when collapsed */
        box-shadow: none !important;
        transition: background-color 0.25s ease, color 0.25s ease;
    }

    /* Hover effect when collapsed */
    .accordion-button:hover {
        background-color: #f8f9fa !important; /* light gray hover */
    }

    /* Expanded state: light blue background, white text */
    .accordion-button:not(.collapsed) {
        background-color: #cfe2ff !important; /* light blue */
        color: #0d6efd !important; /* blue text on light blue for readability */
        box-shadow: none !important;
    }

    /* Remove unwanted focus outline glow */
    .accordion-button:focus {
        box-shadow: 0 0 0 0.1rem rgba(13, 110, 253, 0.3) !important;
    }

    /* --- TripAdvisor Image Gallery Styles --- */
    .image-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
        margin-top: 1rem;
    }

    .image-gallery-item {
        position: relative;
        border-radius: 0.5rem;
        overflow: hidden;
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .image-gallery-item:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 16px rgba(0,0,0,0.2);
    }

    .image-gallery-item img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        display: block;
    }

    .quality-badge {
        position: absolute;
        top: 8px;
        right: 8px;
        background: linear-gradient(135deg, #ffd700, #ffed4e);
        color: #000;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: bold;
        z-index: 10;
        box-shadow: 0 2px 8px rgba(0,0,0,0.3);
        display: flex;
        align-items: center;
        gap: 3px;
    }

    .quality-badge i {
        font-size: 0.7rem;
    }

    .image-caption {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
        color: white;
        padding: 0.5rem;
        font-size: 0.875rem;
        text-align: center;
    }

    .tripadvisor-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 1rem;
        padding: 0.5rem 1rem;
        background: linear-gradient(135deg, #34e0a1 0%, #00af87 100%);
        color: white;
        text-decoration: none;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .tripadvisor-link:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 175, 135, 0.3);
        color: white;
    }

    /* Modal styles for zoomed image */
    .image-modal {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.9);
        align-items: center;
        justify-content: center;
    }

    .image-modal.active {
        display: flex;
    }

    .image-modal-content {
        max-width: 90%;
        max-height: 90%;
        object-fit: contain;
        border-radius: 0.5rem;
    }

    .image-modal-close {
        position: absolute;
        top: 20px;
        right: 40px;
        color: white;
        font-size: 40px;
        font-weight: bold;
        cursor: pointer;
        transition: color 0.3s ease;
    }

    .image-modal-close:hover,
    .image-modal-close:focus {
        color: #bbb;
    }

    .image-modal-caption {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        color: white;
        text-align: center;
        background: rgba(0, 0, 0, 0.7);
        padding: 1rem 2rem;
        border-radius: 0.5rem;
        max-width: 80%;
    }
</style>

<!-- Image Zoom Modal -->
<div id="imageModal" class="image-modal" role="dialog" aria-modal="true" aria-labelledby="modal-caption">
  <span class="image-modal-close" onclick="closeImageModal()" role="button" aria-label="Close image viewer">&times;</span>
  <img class="image-modal-content" id="modalImage" alt="">
  <div class="image-modal-caption" id="modal-caption"></div>
</div>

<script>
  // Cache for storing fetched images in sessionStorage
  function getCacheKey(city, country) {
    return `tripadvisor_${city}_${country}`.replace(/[^a-zA-Z0-9_]/g, '_');
  }

  function loadTripAdvisorImages(index, destinationCity, destinationCountry) {
    const container = document.getElementById(`images-container-${index}`);
    const cacheKey = getCacheKey(destinationCity, destinationCountry);
    
    // Check if already loaded in DOM
    if (container.dataset.loaded === 'true') {
      return;
    }
    
    // Check sessionStorage cache
    const cachedData = sessionStorage.getItem(cacheKey);
    if (cachedData) {
      try {
        const data = JSON.parse(cachedData);
        console.log('üì¶ Loading from cache:', data);
        displayImages(container, data, index);
        container.dataset.loaded = 'true';
        return;
      } catch (e) {
        console.error('Error parsing cached data:', e);
      }
    }
    
    // Fetch via server-side proxy (to avoid CORS issues)
    console.log('üîç Fetching TripAdvisor data via server for:', destinationCity, destinationCountry);
    const url = `/travel_recommendations/fetch_photos?destination_city=${encodeURIComponent(destinationCity)}&destination_country=${encodeURIComponent(destinationCountry)}`;
    
    fetch(url)
      .then(response => {
        if (!response.ok) {
          throw new Error(`HTTP ${response.status}`);
        }
        return response.json();
      })
      .then(data => {
        console.log('‚úÖ Received data from server:', data);
        // Cache the result
        sessionStorage.setItem(cacheKey, JSON.stringify(data));
        
        displayImages(container, data, index);
        container.dataset.loaded = 'true';
      })
      .catch(error => {
        console.error('‚ùå Error fetching TripAdvisor images:', error);
        container.innerHTML = `
          <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Unable to load images at this time. Please try again later.
            <br><small class="text-muted">Error: ${error.message}</small>
          </div>
          <button class="btn btn-sm btn-outline-primary mt-2" onclick="retryLoadImages(${index})">
            <i class="bi bi-arrow-clockwise me-1"></i> Retry
          </button>
        `;
      });
  }

  function displayImages(container, data, index) {
    if (!data.success || !data.photos || data.photos.length === 0) {
      const city = container.dataset.city || 'this destination';
      const country = container.dataset.country || '';
      
      container.innerHTML = `
        <div class="alert alert-info" role="alert">
          <i class="bi bi-info-circle me-2"></i>
          No images available for ${city}, ${country} at the moment.
          ${data.error ? `<br><small class="text-muted">Error: ${data.error}</small>` : ''}
        </div>
        <button class="btn btn-sm btn-outline-primary mt-2" onclick="retryLoadImages(${index})">
          <i class="bi bi-arrow-clockwise me-1"></i> Retry
        </button>
      `;
      return;
    }

    let html = '<div class="image-gallery" role="list">';
    
    data.photos.forEach((photo, photoIndex) => {
      // Add a badge for blessed (high-quality) photos
      const blessedBadge = photo.is_blessed ? 
        '<span class="quality-badge" title="High Quality Photo"><i class="bi bi-star-fill"></i></span>' : '';
      
      html += `
        <div class="image-gallery-item" 
             role="listitem"
             onclick="openImageModal('${photo.url}', '${escapeHtml(photo.caption)}')"
             onkeypress="if(event.key==='Enter') openImageModal('${photo.url}', '${escapeHtml(photo.caption)}')"
             tabindex="0"
             aria-label="View image: ${escapeHtml(photo.caption)}">
          ${blessedBadge}
          <img src="${photo.url}" 
               alt="${escapeHtml(photo.caption)}"
               loading="lazy">
          <div class="image-caption">${escapeHtml(photo.caption)}</div>
        </div>
      `;
    });
    
    html += '</div>';
    
    // Add TripAdvisor link if available
    if (data.web_url) {
      html += `
        <div class="d-flex justify-content-between align-items-center mt-3">
          <a href="${data.web_url}" 
             target="_blank" 
             rel="noopener noreferrer" 
             class="tripadvisor-link"
             aria-label="Visit ${escapeHtml(data.location_name || 'this location')} on TripAdvisor">
            <i class="bi bi-box-arrow-up-right"></i>
            View more on TripAdvisor
          </a>
          <button class="btn btn-sm btn-outline-secondary" onclick="retryLoadImages(${index})">
            <i class="bi bi-arrow-clockwise me-1"></i> Refresh Images
          </button>
        </div>
      `;
    }
    
    container.innerHTML = html;
  }

  function retryLoadImages(index) {
    const container = document.getElementById(`images-container-${index}`);
    const city = container.dataset.city;
    const country = container.dataset.country;
    const cacheKey = getCacheKey(city, country);
    
    // Clear cache for this location
    sessionStorage.removeItem(cacheKey);
    
    // Reset loaded flag
    container.dataset.loaded = 'false';
    
    // Show loading state
    container.innerHTML = `
      <div class="text-center py-3">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading images...</span>
        </div>
        <p class="mt-2 text-muted">Fetching fresh images from TripAdvisor...</p>
      </div>
    `;
    
    // Reload images
    loadTripAdvisorImages(index, city, country);
  }

  function openImageModal(url, caption) {
    const modal = document.getElementById('imageModal');
    const modalImg = document.getElementById('modalImage');
    const modalCaption = document.getElementById('modal-caption');
    
    modal.classList.add('active');
    modalImg.src = url;
    modalImg.alt = caption;
    modalCaption.textContent = caption;
    
    // Trap focus in modal
    modal.focus();
    
    // Add keyboard support
    document.addEventListener('keydown', handleModalKeydown);
  }

  function closeImageModal() {
    const modal = document.getElementById('imageModal');
    modal.classList.remove('active');
    document.removeEventListener('keydown', handleModalKeydown);
  }

  function handleModalKeydown(e) {
    if (e.key === 'Escape') {
      closeImageModal();
    }
  }

  function escapeHtml(text) {
    const map = {
      '&': '&amp;',
      '<': '&lt;',
      '>': '&gt;',
      '"': '&quot;',
      "'": '&#039;'
    };
    return text.replace(/[&<>"']/g, m => map[m]);
  }

  // Close modal when clicking outside the image
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('imageModal');
    if (modal) {
      modal.addEventListener('click', function(e) {
        if (e.target === modal) {
          closeImageModal();
        }
      });
    }
  });
</script>
