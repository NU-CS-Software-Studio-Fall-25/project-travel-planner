<% content_for :title, "Page Not Found - Travel Planner" %>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-8 text-center">
      <div class="error-container py-5">
        <!-- Error Icon -->
        <div class="mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor" class="bi bi-signpost-2 text-primary" viewBox="0 0 16 16">
            <path d="M7 1.414V2H2a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h5v1H2.5a1 1 0 0 0-.8.4L.725 8.5l.975 1.1a1 1 0 0 0 .8.4H7v5h2v-5h5a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1H9V5h4.5a1 1 0 0 0 .8-.4l.975-1.1-.975-1.1A1 1 0 0 0 13.5 2H9v-.586a1 1 0 0 0-2 0zM13.5 3l.5.562L13.5 4H9V3zM2 4h5v1H2zm.5 3H7v1H2.5l-.5-.563z"/>
          </svg>
        </div>

        <!-- Error Message -->
        <h1 class="display-1 fw-bold text-primary">404</h1>
        <h2 class="mb-4">Oops! Page Not Found</h2>
        <p class="lead text-muted mb-4">
          The page you're looking for seems to have taken a detour. 
          <br>It might have been removed, renamed, or doesn't exist.
        </p>

        <!-- Helpful Actions -->
        <div class="d-grid gap-3 d-sm-flex justify-content-center mt-5">
          <% if logged_in? %>
            <%= link_to "Go to My Profile", current_user, class: "btn btn-primary btn-lg px-4" %>
            <%= link_to "Browse Destinations", destinations_path, class: "btn btn-outline-primary btn-lg px-4" %>
          <% else %>
            <%= link_to "Go Home", root_path, class: "btn btn-primary btn-lg px-4" %>
            <%= link_to "Login", login_path, class: "btn btn-outline-primary btn-lg px-4" %>
          <% end %>
        </div>

        <!-- Additional Help -->
        <div class="mt-5">
          <p class="text-muted small">
            Need help? Here are some popular pages:
          </p>
          <div class="d-flex justify-content-center gap-3 flex-wrap">
            <% if logged_in? %>
              <%= link_to "Get Recommendations", travel_recommendations_path, class: "text-decoration-none" %>
              <span class="text-muted">•</span>
              <%= link_to "My Travel Plans", travel_plans_path, class: "text-decoration-none" %>
              <span class="text-muted">•</span>
              <%= link_to "Destinations", destinations_path, class: "text-decoration-none" %>
            <% else %>
              <%= link_to "Home", root_path, class: "text-decoration-none" %>
              <span class="text-muted">•</span>
              <%= link_to "Sign Up", signup_path, class: "text-decoration-none" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .error-container {
    animation: fadeIn 0.5s ease-in;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .error-container svg {
    animation: float 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }
</style>
